# Environment Variables Template for Render.com Deployment
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=10000
CLIENT_URL=https://your-frontend-domain.onrender.com

# Database Configuration (from Render PostgreSQL)
DB_HOST=your-postgresql-host.render.com
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# Alternative: Use external URL if provided by Render
# POSTGRES_URL=postgresql://user:password@host:port/database

# Managed DBs (Render) usually don't allow CREATE DATABASE
SKIP_DB_CREATE=true

# Schema management (this project currently uses Sequelize sync)
DB_SYNC=true
DB_SYNC_ALTER=true

# Allow Vercel preview URLs in CORS (optional)
ALLOW_VERCEL_PREVIEWS=true

# JWT Configuration (Generate random secure strings)
JWT_SECRET=your_secure_random_jwt_secret_here
ACCESS_TOKEN_SECRET=your_secure_random_access_secret_here
REFRESH_TOKEN_SECRET=your_secure_random_refresh_secret_here
RESET_TOKEN_SECRET=your_secure_random_reset_secret_here

# Email Configuration (Optional - for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_or_api_key

# Instructions:
# 1. Copy this file to .env
# 2. Fill in actual values from your Render PostgreSQL database
# 3. Generate secure random strings for JWT secrets
# 4. Deploy to Render with start command: npm run db:init && npm start
