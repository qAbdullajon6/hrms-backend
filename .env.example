# ============================================
# HRMS Backend - Environment Variables
# Copy to .env and fill values (do not commit .env)
# ============================================

# --------------------
# Server
# --------------------
NODE_ENV=development
PORT=5000

# CORS: frontend origin(s), comma-separated
# Local: http://localhost:5173
# Production: https://your-app.vercel.app
CLIENT_URL=http://localhost:5173

# Allow *.vercel.app preview deploys (optional)
ALLOW_VERCEL_PREVIEWS=true

# --------------------
# Database
# --------------------
# Option A – Render / managed Postgres (recommended for production)
# Use connection string from Render PostgreSQL → Connect → External Database URL
# SSL is enabled automatically when POSTGRES_URL is set.
POSTGRES_URL=

# Option B – Local / separate DB vars (used by create-db.js when POSTGRES_URL empty)
DB_NAME=hrms_db
DB_USER=postgres
DB_PASSWORD=your_password
DB_HOST=localhost
DB_PORT=5432

# Managed DB (Render): do not try CREATE DATABASE
SKIP_DB_CREATE=false

# Sequelize: sync tables and seed lookups
DB_SYNC=true
DB_SYNC_ALTER=true
DB_SEED_LOOKUPS=true

# --------------------
# JWT / Auth (use long random strings in production)
# --------------------
JWT_SECRET=your_jwt_secret
ACCESS_TOKEN_SECRET=your_access_token_secret
REFRESH_TOKEN_SECRET=your_refresh_token_secret
RESET_TOKEN_SECRET=your_reset_token_secret

# --------------------
# SMTP (optional – invite / reset emails)
# --------------------
